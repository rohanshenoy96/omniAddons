<aura:component>
  <aura:attribute name="modalMessage"
                  type="String" />
  <div class="slds-notify_container slds-is-relative">
    <div class="slds-notify slds-notify_toast slds-theme_warning"
         role="status">
      <span class="slds-assistive-text">warning</span>
      <span class="slds-icon_container slds-icon-utility-warning slds-m-right_small slds-no-flex slds-align-top">
        <lightning:icon iconName="utility:warning" />
      </span>
      <div class="slds-notify__content">
        <h2 class="slds-text-heading_small ">{!v.modalMessage}</h2>
      </div>
    </div>
  </div>
  <div class="slds-backdrop slds-backdrop_open"></div>
</aura:component>